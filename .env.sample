# ============================================
# fab-ui-2-0 Environment Variables
# Copy to .env and fill in values:
#   cp .env.sample .env
# ============================================

# ---------- Database (PostgreSQL) ----------
POSTGRES_HOST=localhost
POSTGRES_PORT=5432
POSTGRES_DB=fab_ui_dev
POSTGRES_USER=fab_ui
POSTGRES_PASSWORD=

# ---------- JWT Authentication ----------
JWT_SECRET=
# Token expiry in seconds (default: 3600 = 1 hour)
JWT_EXPIRY=3600

# ---------- Application ----------
BACKEND_PORT=8000
FRONTEND_PORT=5173
# Environment: dev | test | prod
APP_ENV=dev
# Log level: debug | info | warn | error
LOG_LEVEL=info

# ---------- Claude Code / ADW ----------
# Anthropic API key for programmatic Claude Code usage
ANTHROPIC_API_KEY=
# Path to claude CLI binary (run 'which claude' if default doesn't work)
CLAUDE_CODE_PATH=claude
# Keep Claude Code in project root after bash commands
CLAUDE_BASH_MAINTAIN_PROJECT_WORKING_DIR=true

# ---------- GitHub (Optional) ----------
# Only needed if ADW should use a different account than 'gh auth login'
GITHUB_PAT=
