{
  "compilerOptions": {
    "outDir": "../backend/public/js/app",
    "rootDir": "src",
    "sourceMap": true,

    "target": "ES2022",
    "module": "ES2022",
    "moduleResolution": "bundler",
    "verbatimModuleSyntax": true,

    "strict": true,
    "noEmit": false,
    "declaration": false,

    "jsx": "preserve",
    "esModuleInterop": true,
    "skipLibCheck": true
  },
  "include": ["src/**/*.ts"],
  "exclude": ["src/__tests__/**/*.ts"]
}
